@model WebService.UI.WebUI.Models.Product.GetAllProductViewModel
<div class="row">
    <h2 class="h2">Of maddest was</h2>
    <div class="nav-link text-danger">
        <a asp-action="Gallery" asp-controller="Home" asp-route-CurrentPage=@(Model.CurrentPage > 1 ? Model.CurrentPage - 1 : ViewBag?.TotalPage )>
            <i class="fa fa-chevron-left"></i>
            <span class="screen-reader-text">Previous page</span>
        </a>
         @for (int i = 1; i <= ViewBag?.TotalPage; i++)
         {
             if(Model.CurrentPage == i)
             {
           <span class="bg-secondary active current">
              <span>Page </span>
             @i
                </span>
             }

        else
             {
                <a asp-action="Gallery" asp-controller="Home" asp-route-CurrentPage="@i">
                <span>Page </span>
                 @i
                  </a>
             }
         }


        <a asp-action="Gallery" asp-controller="Home" asp-route-CurrentPage=@(Model.CurrentPage < 1 ? Model.CurrentPage + 1 : ViewBag?.TotalPage )>
            <span>Next page</span>
            <i class="fa fa-chevron-right"></i>
        </a>
    </div>
</div>
<div class="d-none d-lg-block m-5"></div>